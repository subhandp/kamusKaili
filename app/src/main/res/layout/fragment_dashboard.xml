<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.uya.drawyerlayout.dashboard">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E6E6E6">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/searchView1"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_alignParentLeft="true"
            >

            <EditText
                android:id="@+id/EditIndonsia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Indonesia" />
        </android.support.design.widget.TextInputLayout>

        <ImageButton
            android:id="@+id/imageBtnSpeechText"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:src="@drawable/ic_mic_black_24px"/>
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_marginRight="5dp"-->
        <ImageButton
            android:id="@+id/imageClear"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/imageBtnSpeechText"
            android:background="@null"
            android:src="@drawable/ic_clear_black_24px"/>

        <Button
            android:id="@+id/btnTerjemah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="getTerjemahan"
            android:text="Terjemahkan"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/searchView1"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/txtKaili"
            android:background="#FFFFFF"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_below="@id/btnTerjemah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kamus Inggris Indonesia Jerman"
            />

        <ImageButton
            android:id="@+id/imageBtnTextSpeech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_below="@id/txtKaili"
            android:background="@null"
            android:src="@drawable/ic_volume_up_black_24px"/>
    </RelativeLayout>
</FrameLayout>
